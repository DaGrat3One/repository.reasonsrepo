<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.bdmoviezone"
version="0.1.3"
name="BD MovieZone"
provider-name="Reasons">
<requires>
  <import addon="xbmc.python" version="2.24.0"/>
  <import addon="script.module.requests" version="2.4.3"/>
  <import addon="script.module.beautifulsoup" version="3.2.1"/>
  <import addon="script.module.urlresolver" version="3.0.0"/>
  <import addon="repository.reasonsrepo" version="1.0.0"/>
</requires>
<extension point="xbmc.python.pluginsource" library="main.py">
  <provides>video</provides>
</extension>
<extension point="xbmc.addon.metadata">
  <summary>BD MovieZone</summary>
  <description>BD MovieZone is a popular site to watch Bengali,Hindi and English Movies for free</description>
  <disclaimer>This addon searches BDMovieZone.com to find movie link. The addon itself doesn't host any content.</disclaimer>
	<news>[B]Version 0.1.2 - 27 May 2018[/B]- Fixed Menu, Fixed Playback issues, Removed BDMovieZone Links</news>
  <broken>Site seems to have a lot of dead links</broken>
	<assets>
		<icon>icon.png</icon>
		<fanart>fanart.jpg</fanart>
		<screenshot>resources/images/screenshot-01.jpg</screenshot>
		<screenshot>resources/images/screenshot-02.jpg</screenshot>
		<screenshot>resources/images/screenshot-03.jpg</screenshot>
	</assets>
  </extension>
</addon>
